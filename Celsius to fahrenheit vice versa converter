print("celsius to fahrenheit converter or vice-verca")
t = input("""please enter the temperature to convert.\nusing either C or F symbol\n""")
sign = t[-1]
t = t[0:-1]
t = int(t)
print(t)
if sign == 'C' or sign == 'c':
	#convert to fahrenheit
	t = t*(9/5) + 32
	t = round(t)
	print('this is exactly;',str(t)+'F')
elif sign == 'f' or sign == 'F':
		#convert to celsius
		t = t - 32 *(5/9)
		t = round(t)
		print('this is exactly;',str(t)+'C')
